<div class="customer-pass-1" style=" margin: auto; display: flex; width: 405px; height: 685px; box-shadow: rgba(0, 0, 0, 0.3) 0px 19px 38px, rgba(0, 0, 0, 0.22) 0px 15px 12px; margin-top: 50px; border-radius: 10px;">
    <div class="realtive" style="position:relative; width:405px; height:585px;">
        <img src="~/Assets/Images/pass-background-image.jpg" class="Back-Image" style="width: 405px; height:585px;" />
        <div class="relative-2" style="position:relative; width:405px; top:-535px; height:300px;">
            <img src=@Url.Content(ViewBag.ProfilePicture) alt="Profile Image" id="profile-picture-1" style="" display: block; width: 150px; height: 150px; border-radius: 10px; position: absolute; left: 15px;""/>
            <div class="cropped" style="z-index: 1; position:relative; left:240px; width:150px; height:150px; overflow:hidden;">
                <img src="@ViewBag.QRCodeImagePass" style="width:185px; height:185px; margin:-17px 0px 0px -18px;" />
            </div>
            <!--Full Name-->
            <div class="Pass-Details" style=" display: flex; justify-content: center; font-size: 20px !important; color: black !important;text-align:center font-weight: 600; font-family: 'Times New Roman', Times, serif; text-transform: uppercase; flex-direction: column; align-items: center; width: 100%; margin-top: 10px;">
                <div>
                    <i class="fa fa-user pe-2" style="color: black !important"></i>  @ViewBag.FirstName @ViewBag.LastName
                </div>
                <br />
                <div>
                    <i class="fa fa-phone pe-2" style="color: black !important"></i>  +91 @ViewBag.PhoneNumber
                </div>
                <br />
                <div>
                    <i class="fa fa-heart pe-2" style="color: red !important"></i> @ViewBag.BloodGroup (Blood group)
                </div>
                <br />
                <div>
                    <i class="fa fa-file pe-2" style="color: black !important"></i> @ViewBag.AadharCard
                </div>
            </div>
        </div>
    </div>
</div>