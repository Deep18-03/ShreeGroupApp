        if (!$("#MiddleName").valid()) {
            return false;
        }
        if (!$("#LastName").valid()) {
            return false;
        }
        if (!$("#District").valid()) {
            return false;
        }
        if (!$("#City").valid()) {
            return false;
        }
        if (!$("#PinCode").valid()) {
            return false;
        }
        if (!$("#DateOfBirth").valid()) {
            return false;
        }
        if (!$("#PhoneNumber").valid()) {
            return false;
        }
        if (!$("#Email").valid()) {
            return false;
        }
        if (!$("#Address").valid()) {
            return false;
        }
        if (!$("#BloodGroup").valid()) {
            return false;
        }
       
