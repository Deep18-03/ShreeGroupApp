<section id="user_form">
    <div class="container">
        @using (Html.BeginForm("Registration", "Payment", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-row label-text">
                <div class="form-group col-md-12">
                    <div class="head2"></div>
                </div>
                <br />
                <!--Aadhar card-->
                <div class="form-group col-md-6" id="text">
                    @Html.LabelFor(model => model.AadharCard, new { @class = "required" })
                    @Html.EditorFor(model => model.AadharCard, new { htmlAttributes = new { @class = "form-control", placeholder = "Example: 830210220283", type = "number", maxlength = "12", @readonly = "readonly" } })
                    @Html.Label("Special character and Spaces are not allowed", new { @class = "text-info" })
                    <br />
                    @Html.ValidationMessageFor(model => model.AadharCard, "", new { @class = "text-danger" })
                </div>
                <!--DOB-->
                <div class="form-group col-md-6" id="text">
                    @Html.LabelFor(model => model.DateOfBirth, new { @class = "required" })
                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Date of birth" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-row label-text">

                <!--First Name-->
                <div class="form-group col-md-6" id="text">
                    @Html.LabelFor(model => model.FirstName, new { @class = "required" })
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your first name" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>

                <!--Last Name-->
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.LastName, new { @class = "required" })
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your last name" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-row label-text">
                <!--City Name-->
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.City, new { @class = "required" })
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your city name" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
                <!--District Name-->
                <!--<div class="form-group col-md-4" id="text">-->
                @* @Html.LabelFor(model => model.District, new { @class = "required" })*@
                @*  @Html.EditorFor(model => model.District, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your district name" } })*@
                @*@Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })*@
                <!--</div>-->
                <!--Pin code-->
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.PinCode, new { @class = "required" })
                    @Html.EditorFor(model => model.PinCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your pincode number", type = "number", maxlength = "6" } })
                    @Html.ValidationMessageFor(model => model.PinCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-row label-text">
                <!--Phone numeber-->
                <div class="form-group col-md-6" id="text">
                    @Html.LabelFor(model => model.PhoneNumber, new { @class = "required" })
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your phone number", type = "number", maxlength = "10" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>

                <!--Email-->
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Email, new { @class = "required" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your email id" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-row label-text">
                <!--Upload picture-->
                <div class="form-group col-md-3" id="ProfiletId">
                    @Html.LabelFor(model => model.ProfilePicture, new { @class = "required" })
                    <input type="file" name="ImageFile" id="ImageFile" accept="image/jpeg, image/jpg, image/png" required="required" />
                    @*@Html.TextBoxFor(m => m.ImageFile, new { type = "file" })*@
                    @Html.ValidationMessageFor(m => m.ImageFile, "", new { @class = "text-danger" })
                    @Html.Label("Max size 10 mb allowed", new { @class = "text-info", id = "profile-upload-message" })
                </div>
                <!--AadharCard picture-->
                <div class="form-group col-md-3" id="text">
                    @Html.LabelFor(model => model.AadharCardImage, new { @class = "required" })
                    <input type="file" name="AadharImageFile" id="AadharImageFile" accept="image/jpeg, image/jpg, image/png" required="required" />
                    @*@Html.TextBoxFor(m => m.AadharImageFile, new { type = "file" })*@
                    @Html.ValidationMessageFor(m => m.AadharImageFile, "", new { @class = "text-danger" })
                    @Html.Label("Max size 10 mb allowed", new { @class = "text-info", id = "aadhar-upload-message" })
                </div>
                <!--Blood Group-->
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.BloodGroup, new { @class = "required" })
                    @Html.DropDownList("BloodGroup", new List<SelectListItem>
                  {
                        new SelectListItem {Text="A+",Value="A+"},
                        new SelectListItem {Text="A-",Value="A-"},
                        new SelectListItem {Text="B+",Value="B+"},
                        new SelectListItem {Text="B-",Value="B-"},
                        new SelectListItem {Text="AB+",Value="AB+"},
                        new SelectListItem {Text="AB-",Value="AB-"},
                        new SelectListItem {Text="O+",Value="O+"},
                        new SelectListItem {Text="O-",Value="O-"},
                        //new SelectListItem {Text="Don't Know",Value="Unknown"}
                  }, "Select Blood Group", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BloodGroup, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row label-text">
                <!--Address-->
                <div class="form-group col-md-6" id="text">
                    @Html.LabelFor(model => model.Address, new { @class = "required" })
                    @Html.TextAreaFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Address" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row label-text">
                <!--Amount Details-->
                <div class="form-group col-md-12" id="text">
                    <div class="alert">
                        <ul style="color:white;font-size:14px; margin-left:10px;">
                            @*<li>Physical pass should be collected from below address after 20th September 2022</li>*@
                            <li>Address : SNDT Ground, Umreth</li>
                            <li>Pass helpline number : +91 9723555960, +91 9638886727&nbsp;</li>
                        </ul>
                    </div>
                    <div class="alert">
                        <strong style="font-size:20px; color:white !important">Total Amount for Garba Season Pass <i class="fa fa-inr"></i> @Model.Amount</strong>
                    </div>
                </div>
            </div>
            <!--Amount hidden-->
            @Html.HiddenFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your last name", @readonly = "readonly" } })
            @Html.HiddenFor(model => model.IsPaymentDone, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your last name", @readonly = "readonly" } })
            @Html.HiddenFor(model => model.District, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            <br />
            <div class="form-row">
                <!--submit button-->
                <div class="form-group col-md-6" id="text">
                    <input type="submit" value="Submit" class="primary-button-reg" id="btnSave" />
                    <input type="button" value="Cancel" class="secondary-button-reg" style="margin-left:20px;" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
                </div>
            </div>

            <br />
            <br />
        }
    </div>
</section>


