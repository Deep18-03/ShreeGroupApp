@model ShreeGroup.Models.RegistrationModel

@{
    ViewBag.Title = "Shree Group";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - Admit One Ticket (Aug 2021 #CodePenChallenge)</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link href="~/Content/Custom/customerpass.css" rel="stylesheet" />

</head>
<body>
    <!-- partial:index.partial.html -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />


    @using (Html.BeginForm("GeneratePdf", "Payment", FormMethod.Post))
    {
        <div class="customer-pass-1">
            <div class="realtive">
                <img src="~/Assets/Images/pass-background-image.jpg" class="Back-Image" />
                <div class="realtive-button">
                    <div class="col-md-6">
                        <input type="submit" value="Download Pass" class="primary-button download-pass-btn-1" />
                    </div>
                    <div class="col-md-6">
                        <input type="button" class="back-pass-btn-1" value="Back To Home" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
                    </div>
                </div>
                <div class="relative-2">
                    <img src=@Url.Content(ViewBag.ProfilePicture) alt="Profile Image" id="profile-picture-1" />
                    <div class="cropped" style="z-index:1">
                        <img src="@ViewBag.QRCodeImagePass" />
                    </div>

                    <!--Hidden field-->
                    <input type="hidden" id="FirstName" name="FirstName" value="@(ViewBag.FirstName)" readonly class="input-text">
                    <input type="hidden" id="LastName" name="LastName" value="@(ViewBag.LastName)" readonly class="input-text">
                    <input type="hidden" id="BloodGroup" style="color:black;" name="BloodGroup" value="@(ViewBag.BloodGroup)" readonly class="input-text">
                    <input type="hidden" id="Age" style="color:black;" name="Age" value="@(ViewBag.Age)" readonly class="input-text">
                    <input type="hidden" id="PhoneNumber" name="PhoneNumber" value="@(ViewBag.PhoneNumber)" readonly class="input-text">
                    <input type="hidden" id="AadharCard" name="AadharCard" value="@(ViewBag.AadharCard)" readonly class="input-text">
                    <input type="hidden" class="form-control" maxlength="11" id="FirstName" name="QRCode" value="@(ViewBag.QRCode)">
                    <input type="hidden" class="form-control" maxlength="11" id="FirstName" name="ProfilePicture" value="@(ViewBag.ProfilePicture)">
                    <!--Full Name-->
                    <div class="Pass-Details">
                        <div>
                            <i class="fa fa-user pe-2" style="color: black !important"></i>  @ViewBag.FirstName @ViewBag.LastName
                        </div>
                        <br />
                        <div>
                            <i class="fa fa-phone pe-2" style="color: black !important"></i>  +91 @ViewBag.PhoneNumber
                        </div>
                        <br />
                        <div>
                            <i class="fa fa-heart pe-2" style="color: red !important"></i> @ViewBag.BloodGroup (Blood group)
                        </div>
                        <br />
                        <div>
                            <i class="fa fa-file pe-2" style="color: black !important"></i> @ViewBag.AadharCard
                        </div>
                    </div>


                </div>
            </div>

        </div>
    }


    <!-- partial -->
    <script src="./script.js"></script>

</body>
</html>