@if (Model.Count() == 0)
{
    <div class="container">No data found</div>
}
else
{
    <table>
        <thead>
            <tr style="background:#f4f4f4">
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AadharCard)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="FirstName">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td data-label="LastName">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td data-label="AadharCard">
                        @{ 
                            string aadharcard = Html.DisplayFor(modelItem => item.AadharCard).ToString();
                        }
                       
                        @Html.ActionLink(aadharcard, "ShowAadharCard",  new { id = item.AadharCard },new { @class = "tab" })
                    </td>
                    <td data-label="PhoneNumber">
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td data-label="Email">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td data-label="Action">
                        @Html.ActionLink("View pass", "Details", new { id = item.UrlCode })
                    </td>
                </tr>
            }



        </tbody>
    </table>
}

