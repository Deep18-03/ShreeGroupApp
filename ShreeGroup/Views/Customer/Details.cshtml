@model ShreeGroup.Models.RegistrationModel

@{
    ViewBag.Title = "Shree Group";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Shree Group Umreth</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link href="~/Content/Custom/customerpass.css" rel="stylesheet" />

</head>
<body>
    <!-- partial:index.partial.html -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    @using (Html.BeginForm("GeneratePdf", "Payment", FormMethod.Post))
    {



<div class="customer-pass-1">
    <div class="realtive">
        @if (Model.IsVaccinated)
        {
            <img src="~/Assets/Images/pass-background-admin-free.jpg" class="Back-Image" />

        }
        else
        {
            <img src="~/Assets/Images/pass-background-image.jpg" class="Back-Image" />
        }
        <div class="realtive-button">
            <div class="col-md-6">
                <input type="submit" value="Download Pass" class="primary-button download-pass-btn-1" />
            </div>
            <div class="col-md-6">
                <input type="button" class="back-pass-btn-1" value="Back To Home" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
            </div>
        </div>
        <div class="relative-2">
            <img src="@ViewBag.imagepng" alt="Profile Image" id="profile-picture-1" />
            <div class="cropped" style="z-index:1">
                <img src="@ViewBag.QRCodeDetailPass" />
            </div>

            <!--Hidden field-->
            <input type="hidden" id="FirstName" style="color:black; position:absolute; " name="FirstName" value="@(Model.FirstName)" class="input-text">
            <input type="hidden" id="LastName" style="color:black;" name="LastName" value="@(Model.LastName)" class="input-text">
            <input type="hidden" id="BloodGroup" style="color:black;" name="BloodGroup" value="@(Model.BloodGroup)" readonly class="input-text">
            <input type="hidden" id="Age" style="color:black;" name="Age" value="@(Model.Age)" readonly class="input-text">
            <input type="hidden" id="PhoneNumber" style="color:black;" name="PhoneNumber" value="@(Model.PhoneNumber)" readonly class="input-text">
            <input type="hidden" id="AadharCard" style="color:black;" name="AadharCard" value="@(Model.AadharCard)" readonly class="input-text">
            <input type="hidden" class="form-control" maxlength="11" id="FirstName" name="QRCode" value="@(Model.QRCode)">
            <input type="hidden" class="form-control" maxlength="11" id="FirstName" name="ProfilePicture" value="@(Model.ProfilePicture)">
            @Html.Hidden("IsVaccinated")
            <!--Full Name-->
            <div class="Pass-Details">
                <div>
                    <i class="fa fa-user pe-2" style="color: black !important"></i>  @Model.FirstName @Model.LastName
                </div>
                <br />
                <div>
                    <i class="fa fa-phone pe-2" style="color: black !important"></i>  +91 @Model.PhoneNumber
                </div>
                <br />
                <div>
                    <i class="fa fa-heart pe-2" style="color: red !important"></i> @Model.BloodGroup (Blood group)
                </div>
                <br />
                <div>
                    @{
                        string aadharcard = Model.AadharCard;
                    }

                    <i class="fa fa-file pe-2" style="color: black !important"></i>    @Html.ActionLink(aadharcard, "ShowAadharCard", new { id = aadharcard })
                </div>
            </div>


        </div>
    </div>
            @*<img src="@ViewBag.QRCodeDetailPass" class="profile-picture"/>*@
            <!--<img src=@Url.Content(Model.ProfilePicture) alt="Profile Image" id="profile-picture" />-->
            @*<div class="cropped" style="z-index:1">
                    <img src="@ViewBag.QRCodeDetailPass" />
                </div>*@

        </div>

    }


    <!-- partial -->
    <script src="./script.js"></script>

</body>
</html>